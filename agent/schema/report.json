{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI-Ready Data Assessment Report",
  "description": "Schema for the aggregated assessment report. Contains environment metadata, per-factor per-level scores, explicit gap reporting, and all individual test results.",
  "type": "object",
  "required": ["assessment_id", "timestamp", "environment", "summary", "factors", "not_assessed", "tests"],
  "properties": {
    "assessment_id": {
      "type": "string",
      "description": "Unique identifier for this assessment run."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of when the assessment was run."
    },
    "environment": {
      "type": "object",
      "required": ["connection", "available_providers", "unavailable_providers"],
      "properties": {
        "connection": {
          "type": "string",
          "description": "Sanitized connection string (credentials removed)."
        },
        "available_providers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Query providers that were detected and available (e.g., ansi-sql, information-schema, snowflake)."
        },
        "unavailable_providers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Query providers that were not available in this environment."
        },
        "permissions_gaps": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Specific permissions that were missing and what they would have enabled."
        },
        "tables_assessed": {
          "type": "integer",
          "description": "Total number of tables included in the assessment."
        },
        "columns_assessed": {
          "type": "integer",
          "description": "Total number of columns included in the assessment."
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "L1": {
          "type": "object",
          "properties": {
            "pass": { "type": "integer" },
            "fail": { "type": "integer" },
            "skip": { "type": "integer" },
            "score": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "L2": {
          "type": "object",
          "properties": {
            "pass": { "type": "integer" },
            "fail": { "type": "integer" },
            "skip": { "type": "integer" },
            "score": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "L3": {
          "type": "object",
          "properties": {
            "pass": { "type": "integer" },
            "fail": { "type": "integer" },
            "skip": { "type": "integer" },
            "score": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      },
      "description": "Aggregate pass/fail/skip counts and score at each workload level."
    },
    "factors": {
      "type": "object",
      "properties": {
        "clean":      { "$ref": "#/definitions/factor_scores" },
        "contextual": { "$ref": "#/definitions/factor_scores" },
        "consumable": { "$ref": "#/definitions/factor_scores" },
        "current":    { "$ref": "#/definitions/factor_scores" },
        "correlated": { "$ref": "#/definitions/factor_scores" },
        "compliant":  { "$ref": "#/definitions/factor_scores" }
      },
      "description": "Per-factor scores at each workload level."
    },
    "not_assessed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["factor", "reason"],
        "properties": {
          "factor": { "type": "string" },
          "requirement": { "type": "string" },
          "reason": { "type": "string" }
        }
      },
      "description": "Requirements that could not be assessed, with explanations."
    },
    "tests": {
      "type": "array",
      "items": { "$ref": "test-result.json" },
      "description": "All individual test results."
    }
  },
  "definitions": {
    "factor_scores": {
      "type": "object",
      "properties": {
        "L1": { "type": "number", "minimum": 0, "maximum": 1 },
        "L2": { "type": "number", "minimum": 0, "maximum": 1 },
        "L3": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    }
  }
}
